<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mymarvel.mobile">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.mymarvel.core.MyMarvelApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="mymarvel.com.mobile.ui.list.ListActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.BrandedLaunch">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="mymarvel.com.mobile.ui.character.CharacterActivity"
            android:theme="@style/AppTheme.CharacterActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mymarvel.com.mobile.ui.list.ListActivity" />
        </activity>
    </application>
</manifest>

